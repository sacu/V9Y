<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
    "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sa.mybatis.user">
	<resultMap id="UserModel" type="com.game.sa.data.mybatis.bean.UserModel">
		<result property="userID" column="userID" />
		<result property="userName" column="userName" />
		<result property="passWord" column="passWord" />
		<result property="userHead" column="userHead" />
		<result property="nickName" column="nickName" />
		<result property="level" column="level" />
		<result property="exp" column="heroPower" />
		<result property="currency" column="currency" />
		<result property="diamond" column="diamond" />
		<result property="win" column="win" />
		<result property="fail" column="fail" />
		<result property="dogfall" column="dogfall" />
		
		<result property="cardSkin" column="cardSkin" />
		<result property="dialogueSkin" column="dialogueSkin" />
		<result property="modelSkin" column="modelSkin" />
		<result property="popoSkin" column="popoSkin" />
		<result property="levelGiftState" column="levelGiftState" />
		<result property="fundDiamond" column="fundDiamond" />
		<result property="endFundDiamondDay" column="endFundDiamondDay" />
		<result property="fundCurrency" column="fundCurrency" />
		<result property="endFundCurrencyDay" column="endFundCurrencyDay" />
		<result property="signIn" column="signIn" />
		<result property="signInCount" column="signInCount" />
		<result property="missionRefreshTime" column="missionRefreshTime" />
		<result property="guideStep" column="guideStep" />
	</resultMap>
	<parameterMap id="UserModel" type="com.game.sa.data.mybatis.bean.UserModel">
	</parameterMap>
	<!-- 获取用户列表 -->
	<select id="findUserModelList" resultMap="UserModel">
		select * from
		sa_dt_user
	</select>
	<!-- 插入用户 -->
	<insert id="insertUserModel" useGeneratedKeys="true"
		keyProperty="userID" parameterMap="UserModel">
		insert into
		sa_dt_user(userName,
		passWord, userHead, nickName, exp, level, currency, diamond, win,
		fail, dogfall, cardSkin, dialogueSkin, modelSkin, popoSkin, levelGiftState, fundDiamond, endFundDiamondDay, fundCurrency, endFundCurrencyDay, signIn, signInCount, missionRefreshTime, guideStep)
		value(#{userName}, #{passWord}, #{userHead}, #{nickName}, #{exp}, #{level}, #{currency},
		#{diamond}, #{win}, #{fail}, #{dogfall}, #{cardSkin}, #{dialogueSkin}, #{modelSkin}, #{popoSkin}, #{levelGiftState}, #{fundDiamond}, #{endFundDiamondDay}, #{fundCurrency}, #{endFundCurrencyDay}, #{signIn}, #{signInCount}, #{missionRefreshTime}, #{guideStep})
	</insert>
	<!-- 更新游戏币 -->
	<update id="updateUserModelToCurrency" parameterMap="UserModel">
		update
		sa_dt_user set currency=#{currency} where userID=#{userID}
	</update>
	<!-- 更新钻石 -->
	<update id="updateUserModelToDiamond" parameterMap="UserModel">
		update
		sa_dt_user set diamond=#{diamond} where userID=#{userID}
	</update>
	<!-- 更新等级&经验 -->
	<update id="updateUserModelToExpAndLevel" parameterMap="UserModel">
		update
		sa_dt_user set level=#{level},exp=#{exp} where userID=#{userID}
	</update>
	<!-- 更新胜 -->
	<update id="updateUserModelToWin" parameterMap="UserModel">
		update sa_dt_user
		set win=#{win} where userID=#{userID}
	</update>
	<!-- 更新负 -->
	<update id="updateUserModelToFail" parameterMap="UserModel">
		update
		sa_dt_user set fail=#{fail} where userID=#{userID}
	</update>
	<!-- 更新平 -->
	<update id="updateUserModelToDogFall" parameterMap="UserModel">
		update
		sa_dt_user set dogfall=#{dogfall} where userID=#{userID}
	</update>
	
	<!-- 更新卡牌皮肤 -->
	<update id="updateUserModelToCardSkin" parameterMap="UserModel">
		update
		sa_dt_user set cardSkin=#{cardSkin} where userID=#{userID}
	</update>
	<!-- 更新卡牌皮肤 -->
	<update id="updateUserModelToDialogueSkin" parameterMap="UserModel">
		update
		sa_dt_user set dialogueSkin=#{dialogueSkin} where userID=#{userID}
	</update>
	<!-- 更新角色皮肤 -->
	<update id="updateUserModelToModelSkin" parameterMap="UserModel">
		update
		sa_dt_user set modelSkin=#{modelSkin} where userID=#{userID}
	</update>
	<!-- 更新气泡皮肤 -->
	<update id="updateUserModelToPopoSkin" parameterMap="UserModel">
		update
		sa_dt_user set popoSkin=#{popoSkin} where userID=#{userID}
	</update>
	<!-- 更新等级礼包 -->
	<update id="updateUserModelToLevelGiftState" parameterMap="UserModel">
		update
		sa_dt_user set levelGiftState=#{levelGiftState} where userID=#{userID}
	</update>
	<!-- 更新基金 -->
	<update id="updateUserModelToFundDiamond" parameterMap="UserModel">
		update
		sa_dt_user set fundDiamond=#{fundDiamond},endFundDiamondDay=#{endFundDiamondDay} where userID=#{userID}
	</update>
	<!-- 更新基金 -->
	<update id="updateUserModelToFundCurrency" parameterMap="UserModel">
		update
		sa_dt_user set fundCurrency=#{fundCurrency},endFundCurrencyDay=#{endFundCurrencyDay} where userID=#{userID}
	</update>
	<!-- 更新签到 -->
	<update id="updateUserModelToSignIn" parameterMap="UserModel">
		update
		sa_dt_user set signIn=#{signIn},signInCount=#{signInCount} where userID=#{userID}
	</update>
	<!-- 更新头像 -->
	<update id="updateUserModelToHead" parameterMap="UserModel">
		update
		sa_dt_user set userHead=#{userHead} where userID=#{userID}
	</update>
	<!-- 更新任务刷新时间 -->
	<update id="updateUserModelToMissionRefreshTime" parameterMap="UserModel">
		update
		sa_dt_user set missionRefreshTime=#{missionRefreshTime} where userID=#{userID}
	</update>
	<!-- 更新任务刷新时间 -->
	<update id="updateUserModelToGuideStep" parameterMap="UserModel">
		update
		sa_dt_user set guideStep=#{guideStep} where userID=#{userID}
	</update>
</mapper>