<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
    "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sa.mybatis.card">
	<resultMap id="CardModel" type="com.game.sa.data.mybatis.bean.CardModel">
		<result property="ID" column="ID" />
		<result property="userID" column="userID" />
		<result property="cardID" column="cardID" />
		<result property="equipID1" column="equipID1" />
		<result property="equipID2" column="equipID2" />
		<result property="equipID3" column="equipID3" />
		<result property="equipID4" column="equipID4" />
		<result property="equipID5" column="equipID5" />
		<result property="skillID" column="skillID" />
		<result property="state" column="state" />
	</resultMap>
	<parameterMap id="CardModel"
		type="com.game.sa.data.mybatis.bean.CardModel">
	</parameterMap>
	<!-- 获取卡牌列表 -->
	<select id="findCardModelList" resultMap="CardModel">
		select * from sa_dt_card
	</select>
	<!-- 插入卡牌 -->
	<insert id="insertCardModel" useGeneratedKeys="true" keyProperty="ID" parameterMap="CardModel">
		insert into
		sa_dt_card(userID, cardID) value(#{userID}, #{cardID})
	</insert>
	<!-- 更新卡牌 -->
	<update id="updateCardModelToEquip" parameterMap="CardModel">
		update sa_dt_card set 
		equipID1=#{equipID1}, equipID2=#{equipID2}, equipID3=#{equipID3}, equipID4=#{equipID4}, equipID5=#{equipID5}, skillID=#{skillID}
		where ID=#{ID}
	</update>
	<!-- 更新卡牌 -->
	<update id="updateCardModelToState" parameterMap="CardModel">
		update sa_dt_card set 
		state=#{state} where ID=#{ID}
	</update>
	<!-- 删除卡牌 -->
	<delete id="deleteCardModel" parameterType="int">
		delete from sa_dt_card where ID=#{ID}
	</delete>
</mapper>