<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
    "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sa.mybatis.item">
	<resultMap id="ItemModel" type="com.game.sa.data.mybatis.bean.ItemModel">
		<result property="userID" column="userID" />
		<result property="skinCount" column="skinCount" />
		<result property="skinList" column="skinList" />
		<result property="giftCount" column="giftCount" />
		<result property="giftList" column="giftList" />
	</resultMap>
	
	<parameterMap id="ItemModel"
		type="com.game.sa.data.mybatis.bean.ItemModel">
	</parameterMap>
	
	<!-- 获取背包列表 -->
	<select id="findItemModelList" resultMap="ItemModel">
		select * from sa_dt_item
	</select>
	<!-- 根据用户ID创建用户背包 -->
	<select id="insertItemModel" parameterMap="ItemModel">
		insert into sa_dt_item(userID) value(#{userID})
	</select>
	<!-- 根据用户ID更新气泡皮肤信息 -->
	<update id="updateItemModelForSkin" parameterMap="ItemModel">
		update sa_dt_item set skinList=#{skinList}, skinCount=#{skinCount} where userID=#{userID}
	</update>
	<!-- 根据用户ID更新卡牌皮肤信息 -->
	<update id="updateItemModelForGift" parameterMap="ItemModel">
		update sa_dt_item set giftList=#{giftList}, giftCount=#{giftCount} where userID=#{userID}
	</update>
</mapper>